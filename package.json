{
  "name": "pojo-sets",
  "version": "0.0.1",
  "description": "Plain old Javascript Set implementation",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^6.7.2",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.3"
  },
  "scripts": {
    "check": "npm run build && npm run lint && npm run ts-tests && npm test",
    "ts-tests": "tsc --build src/__tests__/tsconfig.json", 
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint . --ext .ts",
    "preversion": "npm run lint",
    "prepare": "npm run build",
    "prepublishOnly" : "npm run ts-test && npm test && npm run lint",
    "version" : "npm run format && git add -A src",
    "postversion" : "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProdigySim/pojo-sets.git"
  },
  "keywords": ["typescript", "set"],
  "author": "ProdigySim",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ProdigySim/pojo-sets/issues"
  },
  "files": [
    "lib/**/*"
  ],
  "homepage": "https://github.com/ProdigySim/pojo-sets#readme"
}
